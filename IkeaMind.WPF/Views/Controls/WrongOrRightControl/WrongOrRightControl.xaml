<UserControl x:Class="IkeaMind.WPF.Views.Controls.WrongOrRightControl.WrongOrRightControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IkeaMind.WPF.Views.Controls.WrongOrRightControl"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock FontSize="12pt" Foreground="{Binding StatusColor}" FontFamily="Verdana" Text="{Binding StatusText}"></TextBlock>
    </StackPanel>
</UserControl>
